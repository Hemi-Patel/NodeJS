<%- include('../header')%>
    <!-- ============================================================== -->
    <!-- Page wrapper  -->
    <!-- ============================================================== -->
    <div class="page-wrapper">
        <!-- ============================================================== -->
        <!-- Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <div class="page-breadcrumb">
            <div class="row">
                <div class="col-12 d-flex no-block align-items-center">
                    <h4 class="page-title">Blog Form </h4>
                    <div class="ml-auto text-right">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="#">Home</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Edit Blog</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- End Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Container fluid  -->
        <!-- ============================================================== -->
        <div class="container-fluid">
            <!-- ============================================================== -->
            <!-- Start Page Content -->
            <!-- ============================================================== -->
            <div class="row">
                <div class="col-md-6">
                    <div class="card">
                        <form class="form-horizontal" method="post" action="/admin/blog/UpdateBlog/<%=BlogData._id%>"
                            enctype="multipart/form-data">
                            <div class="card-body">
                                <h4 class="card-title">Edit Blog </h4>
                                <div class="form-group row">
                                    <label for="fname" class="col-sm-3 text-right control-label col-form-label">Blog
                                        Title</label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control" name="title" id="fname"
                                            value="<%=BlogData.title%>" placeholder="Blog Title Here">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="email"
                                        class="col-sm-3 text-right control-label col-form-label">Description</label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control" name="description"
                                            value="<%=BlogData.description%>" id="lname" placeholder="Description Here">
                                    </div>
                                </div>


                                <div class="form-group row">
                                    <label class="col-sm-3 text-right control-label col-form-label">Category</label>
                                    <div class="col-md-9">
                                        <div class="custom-control custom-checkbox mr-sm-2">
                                            <input type="checkbox" class="custom-control-input" name="category"
                                                value="Finance" id="customControlAutosizing1"
                                                <%=BlogData.category.includes('Finance')? "checked" : " " %>>
                                            <label class="custom-control-label"
                                                for="customControlAutosizing1">Finance</label>
                                        </div>
                                        <div class="custom-control custom-checkbox mr-sm-2">
                                            <input type="checkbox" class="custom-control-input"
                                                id="customControlAutosizing2" name="category" value="Business"
                                                <%=BlogData.category.includes('Business')? "checked" : " " %>>
                                            <label class="custom-control-label" for="customControlAutosizing2">Business
                                            </label>
                                        </div>
                                        <div class="custom-control custom-checkbox mr-sm-2">
                                            <input type="checkbox" class="custom-control-input"
                                                id="customControlAutosizing3" name="category" value="Fashion"
                                                <%=BlogData.category.includes('Fashion')? "checked" : " " %>>
                                            <label class="custom-control-label"
                                                for="customControlAutosizing3">Fashion</label>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-sm-3 text-right control-label col-form-label">Choose Blog
                                        Image</label>
                                    <div class="col-md-9">
                                        <div class="custom-file">
                                            <input type="file" class="custom-file-input" id="validatedCustomFile"
                                                name="image">
                                            <label class="custom-file-label" for="validatedCustomFile">Choose
                                                file...</label>
                                                <!-- <img src="<%=BlogData.image%>" alt="" height="100" width="100"> -->
                                            <div class="invalid-feedback">Example invalid custom file feedback</div>
                                        </div>
                                    </div>
                                </div>
                                <div class="border-top">
                                    <div class="card-body">
                                        <button type="submit" value="Add Blog" class="btn btn-primary">Edit
                                            Blog</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <!-- editor -->
            <!-- ============================================================== -->
            <!-- End PAge Content -->
            <!-- ============================================================== -->
            <!-- ============================================================== -->
            <!-- Right sidebar -->
            <!-- ============================================================== -->
            <!-- .right-sidebar -->
            <!-- ============================================================== -->
            <!-- End Right sidebar -->
            <!-- ============================================================== -->
        </div>
        <!-- ============================================================== -->
        <!-- End Container fluid  -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <%- include('../footer')%>
       