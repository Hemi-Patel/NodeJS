<%- include('../header')%>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.0.0/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-modal/0.9.1/jquery.modal.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-modal/0.9.1/jquery.modal.min.css" />

<div class="page-wrapper">
    <!-- Breadcrumb -->
    <div class="page-breadcrumb bg-light py-3 shadow-sm">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0 fw-bold">Personal Profile</h5>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item"><a href="/" class="text-decoration-none">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Profile</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>

    <!-- Profile Card -->
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-lg-5 col-md-7">
                <div class="card shadow-lg border-0  text-center p-4" style="border-radius: 25px;">
                    
                    <!-- Profile Image -->
                    <div class="d-flex justify-content-center">
                        <img src="<%= user.profile %>" 
                             class="rounded-circle shadow"
                             alt="Profile Picture"
                             style="width: 200px; height: 200px; object-fit: cover;">
                    </div>

                    <!-- Profile Info -->
                    <div class="card-body mt-3">
                        <h3 class="fw-bold mb-1"><%= user.name %></h3>
                        <p class="text-muted mb-3"><i class="bi bi-envelope"></i> <%= user.email %></p>

                        <ul class="list-group list-group-flush text-start">
                            <li class="list-group-item"><strong>Gender:</strong> <%= user.gender %></li>
                            <li class="list-group-item"><strong>Qualification:</strong> <%= user.qualification %></li>
                            <li class="list-group-item"><strong>About:</strong> <%= user.description %></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<%- include('../footer')%>
