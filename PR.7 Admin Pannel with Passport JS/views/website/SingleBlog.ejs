<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title> My Blog</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body {
      background: #f8f9fa;
      font-family: "Poppins", sans-serif;
    }
    .card {
      border-radius: 1rem;
    }
    .blog-description {
      line-height: 1.9;
      text-align: justify;
      font-size: 1rem;
    }
    .badge {
      border-radius: 20px;
      font-size: 0.9rem;
    }
  </style>
</head>
<body>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg bg-light shadow-sm">
    <div class="container">
      <a class="navbar-brand fw-bold text-primary fs-4" href="/website">My Blog</a>
    </div>
  </nav>

  <!-- Single Blog Section -->
  <div class="container my-5">
    <div class="row justify-content-center">
      <div class="col-lg-10">

        <!-- Blog Card -->
        <div class="card shadow-lg border-0 overflow-hidden">
          
          <!-- Blog Image -->
          <div class="position-relative">
            <img src="<%= BlogRecord.image %>" 
                 alt="Blog Image" 
                 class="img-fluid w-100" 
                 style="max-height: 400px; object-fit: cover;">
          </div>

          <!-- Blog Body -->
          <div class="card-body p-5">
            
            <!-- Blog Title -->
            <h1 class="fw-bold mb-3 text-dark"><%= BlogRecord.title %></h1>

            <!-- Blog Date -->
            <% if (BlogRecord.createdAt) { %>
              <p class="text-muted small mb-4">
                ðŸ“… Published on 
                <%= new Date(BlogRecord.createdAt).toLocaleDateString("en-IN", { 
                  day: "numeric", month: "long", year: "numeric" 
                }) %>
              </p>
            <% } %>

            <!-- Blog Description -->
            <p class="blog-description text-secondary">
              <%= BlogRecord.description %>
            </p>

            <!-- Categories -->
            <div class="mt-4">
              <h6 class="fw-bold mb-2">ðŸ“Œ Categories:</h6>
              <div class="d-flex flex-wrap gap-2">
                <% BlogRecord.category.map((category) => { %>
                  <span class="badge bg-warning text-dark px-3 py-2">
                    <%= category %>
                  </span>
                <% }) %>
              </div>
            </div>

            <!-- Back Button -->
            <div class="mt-5">
              <a href="/website" class="btn btn-outline-primary px-4 py-2 rounded-pill">
                â¬… Back to Blogs
              </a>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>

 
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
