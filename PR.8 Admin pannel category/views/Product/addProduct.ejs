<%- include('../header')%>
    <!-- ============================================================== -->
    <!-- Page wrapper  -->
    <!-- ============================================================== -->
    <div class="page-wrapper">
        <!-- ============================================================== -->
        <!-- Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <div class="page-breadcrumb">
            <div class="row">
                <div class="col-12 d-flex no-block align-items-center">
                    <h4 class="page-title">Add Product Form </h4>
                    <div class="ml-auto text-right">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="#">Home</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Product</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- End Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Container fluid  -->
        <!-- ============================================================== -->
        <div class="container-fluid">
            <!-- ============================================================== -->
            <!-- Start Page Content -->
            <!-- ============================================================== -->
            <div class="row">
                <div class="col-md-6">
                    <div class="card">
                        <form class="form-horizontal" method="post" action="/admin/product/insertProduct"
                            enctype="multipart/form-data">
                            <div class="card-body">
                                <h4 class="card-title">Products Info</h4>
                                <div class="form-group row">
                                    <label for="fname" class="col-sm-3 text-right control-label col-form-label">
                                        Product Name</label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control" name="p_name" id="fname"
                                            placeholder="Product name Here">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="fname" class="col-sm-3 text-right control-label col-form-label">
                                        Product Description</label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control" name="description" id="fname"
                                            placeholder="Product Description Here">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="fname" class="col-sm-3 text-right control-label col-form-label">
                                        Product Price</label>
                                    <div class="col-sm-9">
                                        <input type="number" class="form-control" name="price" id="fname"
                                            placeholder="Product Price Here">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="fname" class="col-sm-3 text-right control-label col-form-label">
                                        Product Quantity</label>
                                    <div class="col-sm-9">
                                        <input type="number" class="form-control" name="quantity" id="fname"
                                            placeholder="Product Quantity Here">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="fname" class="col-sm-3 text-right control-label col-form-label">
                                        Product Image</label>
                                    <div class="col-sm-9">
                                        <input type="file" class="form-control" name="p_image" id="fname"
                                            placeholder="Product Image Here">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="fname" class="col-sm-3 text-right control-label col-form-label">Category
                                        Name</label>
                                    <div class="col-sm-9">
                                        <select name="category" id="category" class="w-100 p-2"
                                            style="border:1px solid #e9ecef">
                                            <option value="--Select Category --">
                                                --Select Category --
                                            </option>
                                            <%categories.map((v,i)=>{%>
                                                <option value="<%=v._id%>">
                                                    <%=v.category%>
                                                </option>
                                                <%})%>

                                        </select>
                                    </div>

                                </div>
                                <div class="form-group row">
                                    <label for="fname" class="col-sm-3 text-right control-label col-form-label">Sub
                                        Category
                                        Name</label>
                                    <div class="col-sm-9">
                                        <select name="subCategory" class="w-100 p-2" id="subCategory"
                                            style="border:1px solid #e9ecef">
                                            <option value="--Select Category --">
                                                --Select Sub Category --
                                            </option>



                                        </select>
                                    </div>

                                </div>
                                <div class="form-group row">
                                    <label for="fname" class="col-sm-3 text-right control-label col-form-label">Extra
                                        Sub
                                        Category
                                        Name</label>
                                    <div class="col-sm-9">
                                        <select name="extraSubcategory" class="w-100 p-2" id="extraSubCategory"
                                            style="border:1px solid #e9ecef">
                                            <option value="--Select Category --">
                                                --Select Extra Sub Category --
                                            </option>

                                        </select>
                                    </div>
                                </div>
                                <div class="border-top">
                                    <div class="card-body">
                                        <button type="submit" value="Add Product" class="btn btn-primary">Add
                                            Product</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <!-- editor -->
            <!-- ============================================================== -->
            <!-- End PAge Content -->
            <!-- ============================================================== -->
            <!-- ============================================================== -->
            <!-- Right sidebar -->
            <!-- ============================================================== -->
            <!-- .right-sidebar -->
            <!-- ============================================================== -->
            <!-- End Right sidebar -->
            <!-- ============================================================== -->
        </div>
        <!-- ============================================================== -->
        <!-- End Container fluid  -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <%- include('../footer')%>

            <script>

                document.addEventListener('DOMContentLoaded', () => {
                    const categorySelect = document.getElementById('category');
                    const subCategorySelect = document.getElementById('subCategory');
                    const extraSubCategorySelect = document.getElementById('extraSubCategory');

                    categorySelect.addEventListener('change', () => {
                        let categoryID = categorySelect.value;
                        // console.log(categoryID)

                        subCategorySelect.innerHTML = `<option value="">Select Sub category</option>`;
                        fetch(`/admin/extra-sub-category/SubCategory?categoryID=${categoryID}`)
                            .then(res => res.json())
                            .then(data => {
                                // console.log(data);
                                data.subCategories.forEach(v => {
                                    let option = document.createElement('option');
                                    option.innerHTML = v.subCategoryName;
                                    option.value = v._id;
                                    subCategorySelect.append(option)
                                });

                            })
                            .catch(error => console.log('error', error));
                    })

                    subCategorySelect.addEventListener('change', () => {
                        let subCategoryID = subCategorySelect.value;
                        console.log(subCategoryID);

                        extraSubCategorySelect.innerHTML = `<option value="">select Extra Sub category</option>`;
                        fetch(`/admin/product/Products?SubcategoryID=${subCategoryID}`)
                            .then(res => res.json())
                            .then(data => {
                                // console.log(data)
                                data.ExtraSubCategory.forEach(v => {
                                    let option = document.createElement('option');
                                    option.innerHTML = v.ExtraSubcategoryName;
                                    option.value = v._id;
                                    extraSubCategorySelect.append(option);
                                })
                            })
                            .catch(error => console.log('error', error));
                    })
                })
            </script>