<%- include('../header')%>

    <div class="page-wrapper">
        <div class="page-breadcrumb">
            <div class="row">
                <div class="col-12 d-flex no-block align-items-center">
                    <h4 class="page-title">Products</h4>
                    <div class="ml-auto text-right">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="#">Home</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Products</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>

        <div class="container-fluid">
            <div class="row g-4 d-flex justify-content-start align-items-center">
                <% products.map((v,i)=>{ %>
                    <div class="col-sm-6 col-md-4 col-lg-3 ">
                        <div class="simple-card text-center mb-4">
                            <img src="<%= v.p_image %>" alt="<%= v.p_name %>" height="300" width="300">
                            <h6 class="mt-3 fw-bold">
                                <%= v.p_name %>
                            </h6>
                            <p class="desc-text">
                                <%= v.description %>
                            </p>
                            <p class="price">â‚¹ <%= v.price %>
                            </p>
                            <p class="qty">Qty: <%= v.quantity %>
                            </p>
                            <div class="meta">
                                <span class="badge bg-light text-dark">
                                    <%= v.category.category %>
                                </span>
                                <span class="badge bg-light text-dark">
                                    <%= v.subCategory.subCategoryName %>
                                </span>
                            </div>
                            <div class="d-flex">
                                <a href="ViewSingleProduct/<%=v._id%>"
                                    class="btn btn-outline-primary btn-sm mt-2 w-100 "
                                    style="margin-right: 10px;">View</a>
                                <a href="editProduct/<%=v._id%>" class="btn btn-outline-primary btn-sm mt-2 w-100"
                                    style="margin-right: 10px;">Edit</a>
                                <a href="deleteProduct/<%=v._id%>" class="btn btn-outline-primary btn-sm mt-2 w-100"
                                    style="margin-right: 10px;">Delete</a>
                            </div>
                        </div>
                    </div>
                    <% }) %>
            </div>
        </div>
    </div>

    <%- include('../footer')%>

        <style>
            .simple-card {
                background: #fff;
                border: 1px solid #e9ecef;
                border-radius: 12px;
                padding: 15px;
                transition: all 0.2s ease-in-out;
            }

            .simple-card:hover {
                border-color: #0d6efd;
                transform: scale(1.02);
            }

            img {
                max-width: 100%;
                display: block;
            }

            .simple-card .img-box img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

            .price {
                font-weight: 600;
                color: #198754;
            }

            .qty {
                font-size: 0.85rem;
                color: #6c757d;
            }

            .meta .badge {
                margin: 2px;
                font-size: 0.75rem;
            }

            .desc-text {
                font-size: 0.85rem;
                color: #6c757d;
                margin-bottom: 5px;
                height: 40px;
                /* white-space: nowrap; */
                overflow: hidden;
                text-overflow: ellipsis;

            }
        </style>