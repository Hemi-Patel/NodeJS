<%- include('../header')%>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.0.0/jquery.min.js"></script>

    <!-- jQuery Modal -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-modal/0.9.1/jquery.modal.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-modal/0.9.1/jquery.modal.min.css" />
    <!-- ============================================================== -->
    <!-- Page wrapper  -->
    <!-- ============================================================== -->
    <div class="page-wrapper">
        <!-- ============================================================== -->
        <!-- Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <div class="page-breadcrumb">
            <div class="row">
                <div class="col-12 d-flex no-block align-items-center">
                    <h4 class="page-title">Tables</h4>
                    <div class="ml-auto text-right">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="#">Home</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Library</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- End Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Container fluid  -->
        <!-- ============================================================== -->
        <div class="container-fluid">
            <!-- ============================================================== -->
            <!-- Start Page Content -->
            <!-- ============================================================== -->
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title m-b-0">Blog Table</h5>
                        </div>
                        <div class="d-flex w-100">
                            <div class="mb-5">
                                <form class="form-inline" method="get" action="/admin/blog/viewBlog">
                                    <div class="input-group">
                                        <input type="text" name="search"
                                            value="<%= typeof search !== 'undefined' ? search : '' %>"
                                            class="form-control" style="margin-left: 20px;" placeholder="Search title "
                                            style="min-width: 250px;">

                                        <div class="input-group " style="margin-left: 20px;">
                                            <select name="filterByCategory" style="min-width: 250px; padding: 8px;"
                                                onchange="this.form.submit()">
                                                <option value="">All Categories</option>
                                                <% categories.forEach((v,i)=> { %>
                                                    <option value="<%= v %>" <%=(filterByCategory===v ? "selected" : ""
                                                        ) %>
                                                        >
                                                        <%= v %>
                                                    </option>
                                                    <% }) %>
                                            </select>

                                        </div>
                                        <div class="input-group-append" style="margin-left: 20px;">
                                            <button class="btn btn-primary" type="submit">Search</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>

                        <div class="d-flex justify-content-start align-items-center  flex-wrap ">
                            <% BlogRecord.map((v,i)=>{%>
                                <div class="col-md-3 mb-4">
                                    <div class="card border border-1 p-1"
                                        style="border-radius:25px !important;height: 500px !important;">

                                        <!-- Blog Image -->
                                        <img src="<%= v.image %>" class="card-img-top border border-1" alt="Blog Image"
                                            style="height:200px;border-radius:25px !important" ">

                                        <div class=" card-body d-flex flex-column">

                                        <!-- Title -->
                                        <h5 class="card-title fw-bolder text-truncate">
                                            <%= v.title %>
                                        </h5>

                                        <!-- Description -->
                                        <p class="card-text text-muted"
                                            style="font-size: 14px; max-height: 68px; overflow: hidden;">
                                            <%= v.description %>
                                        </p>

                                        <!-- Categories -->
                                        <ul
                                            class="d-flex flex-nowrap justify-content-start align-items-center flex-wrap p-0 mt-2">
                                            <% v.category.map((category, i)=> { %>
                                                <li class="badge bg-warning text-dark border mt-1 p-2"
                                                    style="margin-left: 10px !important; font-size: 12px !important;  border-radius: 10px;">
                                                    <%= category %>
                                                </li>
                                                <% }) %>
                                        </ul>

                                        <!-- Button -->
                                        <div class="mt-auto d-flex justify-content-between">
                                            <div class="div">
                                                <a href="deleteBlog/<%=v._id%>" class="btn btn-danger"
                                                    style="border-radius: 10px !important;"><i
                                                        class="fas fa-trash"></i></a>
                                                <a href="editBlog/<%=v._id%>" class="btn btn-success"
                                                    style="border-radius: 10px !important;"><i
                                                        class="far fa-edit"></i></a>
                                            </div>
                                            <a href="ReadBlog/<%=v._id%>" class="btn btn-primary"
                                                style="border-radius: 10px !important;">Read more</a>
                                        </div>
                                    </div>
                                </div>
                        </div>
                        <% }) %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('../footer')%>