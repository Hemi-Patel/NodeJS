<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="./css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
    <title>Document</title>
</head>

<body>

    <header>
        <div class="container-fluid">
            <div class="row">
                <h1>My Header</h1>
            </div>
        </div>
    </header>
    <section class="mt-2">
        <div class="container-fluid">
            <div class="row d-flex">
                <%- include('sidebar') %>
                    <div class="col-md-9">
                        <div class="main bg-white p-3">
                            <table class="table table-striped">
        <tr>
            <th>Title <i class="fa-solid fa-sort"></i></th>
            <th> Author  <i class="fa-solid fa-sort"></i></th>
            <th> ISBN No<i class="fa-solid fa-sort"></i></th>
            <th> Gener<i class="fa-solid fa-sort"></i></th>
            <th> Total<i class="fa-solid fa-sort"></i></th>
            <th> Action<i class="fa-solid fa-sort"></i></th>
        </tr>
        <% books.map((v,i)=>{%>
            <tr>

                <td><img src="<%= v.image %>" alt="" width="50" class="me-3">
                    <%= v.title%>
                </td>
                <td>
                    <%= v.author%>
                </td>
                <td>
                    <%= v.isbnnum%>
                </td>

                <td>
                    <%v.gener.map((val,index)=>{%>
                        <%= val%>
                            <%})%>
                </td>

                <td>
                    <%= v.total%>
                </td>
                <td>
                    <ul class="d-flex">
                        <a href="#" class="me-2 rounded-1 pe-1 ps-1 bg-info  text-white">
                            <li><i class="fa-solid fa-user"></i></li>
                        </a>
                        <a href="/deletebook?bookId=<%=v._id%>" class="me-2 rounded-1 pe-1 ps-1 bg-danger  text-white">
                            <li><i class="fa-solid fa-trash"></i></li>
                        </a>
                        <a href="/editBook?bookId=<%=v._id%>" class="me-2 rounded-1 pe-1 ps-1 bg-warning  text-white">
                            <li><i class="fa-solid fa-pen-to-square"></i></li>
                        </a>
                        <a href="/viewSingle?bookId=<%=v._id%>" class="me-2 rounded-1 pe-1 ps-1 bg-primary  text-white">
                            <li><i class="fa-solid fa-eye"></i></li>
                        </a>
                    </ul>
                </td>
            </tr>
            <%})%>
    </table>
                        </div>
                    </div>
            </div>
        </div>
    </section>
    <div class="viewBook">

    
    
    </div>
</body>

</html>